<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoregistrar"
    android:orientation="vertical"
    tools:context=".Registrar">

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@android:color/holo_blue_bright"
     android:hint="Registro de usuarios"
     android:textAlignment="center"
     android:textSize="25dp" />

 <EditText
     android:layout_width="match_parent"
     android:layout_height="10dp"
     android:background="@android:color/transparent" />
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     >

  <EditText
      android:id="@+id/Nombre"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/background_light"
      android:drawableLeft="@drawable/ic_mood_black_24dp"
      android:hint="Ingrese nombre"
      android:textAlignment="center"
      android:textSize="22dp"
      android:textStyle="bold" />

 </LinearLayout>

 <EditText
     android:layout_width="match_parent"
     android:layout_height="10dp"
     android:background="@android:color/transparent" />

 <EditText
     android:id="@+id/NombreUsuario"
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:background="@android:color/background_light"
     android:drawableLeft="@drawable/ic_person_outline_black_24dp"
     android:hint="Ingrese nombre de usuario"
     android:textAlignment="center"
     android:textSize="22dp"
     android:textStyle="bold" />
 <EditText
     android:layout_width="match_parent"
     android:layout_height="10dp"
     android:background="@android:color/transparent" />


 <EditText
     android:id="@+id/Registrar_Contraseña"
     android:layout_width="match_parent"
     android:layout_height="43dp"
     android:background="@android:color/background_light"
     android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
     android:hint="Ingrese contraseña"
     android:textAlignment="center"
     android:textSize="22dp"
     android:textStyle="bold" />
 <EditText
     android:layout_width="match_parent"
     android:layout_height="10dp"
     android:background="@android:color/transparent" />

 <EditText
     android:id="@+id/Registrar_Correo"
     android:layout_width="match_parent"
     android:layout_height="43dp"
     android:background="@android:color/background_light"
     android:drawableLeft="@drawable/ic_email_black_24dp"
     android:hint="Ingrese correo electronico"
     android:textAlignment="center"
     android:textSize="22dp"
     android:textStyle="bold" />

 <EditText
     android:layout_width="match_parent"
     android:layout_height="10dp"
     android:background="@android:color/transparent" />

 <Button
     android:id="@+id/ValidarRegistro"
     android:layout_width="match_parent"
     android:layout_height="70dp"
     android:text="Registrarse"
     android:textAlignment="center"
     android:textSize="30dp"
     android:textStyle="bold"
     android:clickable="true"
     style="@style/Base.TextAppearance.AppCompat.Body1"
     android:textColor="#000000"
     />

 <EditText
     android:layout_width="match_parent"
     android:layout_height="10dp"
     android:background="@android:color/transparent"
     />

 <TextView
     android:id="@+id/MensajeValidacion"
     android:layout_width="match_parent"
     android:layout_height="150dp"
     android:background="?android:attr/textColorLink"
     android:textColor="@android:color/background_dark"
     android:textSize="20dp" />


</LinearLayout>